
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassword</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-image:url(../image/arkaplanblur.jpeg); background-size: 100%">
    <div style="background-color: black;
            opacity: 0.7;
            margin-top: 5%">
        <div align="center">
            <p><h1 style="color:honeydew"></h1> <img src="~/image/logo.png" width="400px" height="100px" /></p>
        </div>
    </div>
    <div class="container" style="height:410px; width:40%; background-color:black;  border-radius:40px;opacity: 0.8;">
        <h2 style="text-align:center; color:blanchedalmond">Şifrenizi Yenileyin</h2>
        <hr />
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                
                <div class="text-success">
                    @ViewBag.Message
                </div>
                <div class="form-group" style="color:blanchedalmond">
                    Şifrenizi sıfırlamak ve bağlantı içeren bir e-posta almak için lütfen aşağıya, kayıtlı e-posta adresinizi girin.
                </div>
                <hr />
                <div class="form-group">
                    <label class="control-label"  style="color:blanchedalmond">E-mail:</label>
                    @Html.TextBox("EmailID", "", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2">
                        <input type="submit" value="Link Gönder" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

    </div>
</body>
</html>
