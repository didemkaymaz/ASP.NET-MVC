@model proje_a.Models.EntityFramework.contactTbl
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";


}
@if (ViewBag.Error != null)
{
    <h2>@ViewBag.Error</h2>
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>iletisim</title>
</head>
<header class="masthead" style="background-image: url('../image/contact.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="page-heading">
                    <h1>İletişime Geçin</h1>
                    <span class="subheading">Gördüğünüz Mutluluk Yeri'ni bizimle paylaşın.</span>
                    <span class="subheading">Kayıp gördüğünüzde bizimle iletişime geçin!</span>
                    <span class="subheading">Sorunuz varsa hemen bize iletin.</span>
                </div>
            </div>
        </div>
    </div>
</header>
<body>

    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <p>*Mutluluk Yeri için bizlere bilgi verirken lütfen enlem ve boylam bilgilerini de paylaşın :)</p>
            
                <form name="sentMessage" id="contactForm"  action="iletisim" method="post" novalidate>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Ad</label>
                            <input name="uye_ad" type="text" class="form-control" placeholder="Ad Soyad" id="uye_ad" required data-validation-required-message="Please enter your name.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>E-mail</label>
                            <input name="uye_mail"  type="email" class="form-control" placeholder="E-mail" id="uye_mail" required data-validation-required-message="Please enter your email address.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>Konu</label>
                            <input name="subject" type="text" class="form-control" placeholder="Konu" id="subject" required data-validation-required-message="Please enter your phone number.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Mesaj</label>
                            <textarea rows="5" class="form-control" placeholder="Mesaj" id="message" name="message" required data-validation-required-message="Please enter a message."></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <button type="submit" class="btn btn-primary" id="sendMessageButton">Gönder</button>
                </form>
            </div>
        </div>
    </div>



